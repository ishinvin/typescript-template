{
  "name": "typescript-template",
  "version": "0.0.1",
  "description": "A simple typescript template for scaffolding Node.js library",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "check": "tsc",
    "build": "tsup",
    "test": "jest",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prebuild": "pnpm run check && pnpm run lint && pnpm run test",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [],
  "author": "Ishin Vin",
  "license": "ISC",
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@jest/globals": "^30.1.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "jest": "^30.1.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
